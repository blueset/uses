{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/uses.schema.json",
    "title": "Uses Page Configuration",
    "description": "Schema for src/data/uses.yaml defining sections and entries for the Uses page.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "sections"
    ],
    "properties": {
        "sections": {
            "type": "array",
            "description": "Top-level list of sections to render on the page.",
            "minItems": 0,
            "items": {
                "$ref": "#/definitions/UsesSection"
            }
        }
    },
    "definitions": {
        "LayoutType": {
            "type": "string",
            "enum": [
                "grid",
                "list",
                "masonry"
            ],
            "description": "Default layout for a section."
        },
        "SectionType": {
            "type": "string",
            "enum": [
                "software",
                "hardware"
            ],
            "description": "Type of section content."
        },
        "IconifyClass": {
            "type": "string",
            "description": "Iconify class in the format: 'iconify <collection>--<icon>' (e.g., 'iconify lucide--code-2'), or 'iconify-color <collection>--<icon>'.",
            "pattern": "^iconify(-color)?\\s+[A-Za-z0-9-]+--[A-Za-z0-9-]+$"
        },
        "ImagePath": {
            "type": "string",
            "description": "Path to an image in the public folder (e.g., '/images/foo.svg' or '/images/foo.png').",
            "pattern": "^/.*"
        },
        "Link": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "title",
                "url"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Link label to display."
                },
                "url": {
                    "type": "string",
                    "format": "uri-reference",
                    "description": "Destination URL (absolute or fragment)."
                }
            }
        },
        "Metadata": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "key",
                "value"
            ],
            "properties": {
                "key": {
                    "type": "string",
                    "minLength": 1
                },
                "value": {
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "UsesEntry": {
            "type": "object",
            "additionalProperties": false,
            "description": "Entry in the 'Uses' section.",
            "required": [
                "title"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "description": {
                    "type": "string",
                    "description": "MDX-formatted description (rendered server-side).",
                    "minLength": 1
                },
                "icon": {
                    "$ref": "#/definitions/IconifyClass"
                },
                "logo": {
                    "$ref": "#/definitions/ImagePath"
                },
                "photo": {
                    "$ref": "#/definitions/ImagePath"
                },
                "hidden": {
                    "type": "boolean",
                    "default": false
                },
                "links": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Link"
                    },
                    "minItems": 0
                },
                "metadata": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Metadata"
                    },
                    "minItems": 0,
                    "description": "Optional list of key/value pairs shown in details overlay."
                }
            }
        },
        "UsesSection": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "title",
                "color",
                "icon",
                "type",
                "defaultLayout",
                "entries"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "color": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Tailwind text color classes; can include dark: variants (e.g., 'text-blue-600', 'text-gray-700 dark:text-gray-300')."
                },
                "icon": {
                    "$ref": "#/definitions/IconifyClass"
                },
                "type": {
                    "$ref": "#/definitions/SectionType"
                },
                "defaultLayout": {
                    "$ref": "#/definitions/LayoutType"
                },
                "entries": {
                    "type": "array",
                    "description": "Entries within the section.",
                    "minItems": 0,
                    "items": {
                        "$ref": "#/definitions/UsesEntry"
                    }
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": { "type": { "const": "software" } },
                        "required": ["type"]
                    },
                    "then": {
                        "properties": {
                            "defaultLayout": { "enum": ["grid", "list"] }
                        }
                    }
                },
                {
                    "if": {
                        "properties": { "type": { "const": "hardware" } },
                        "required": ["type"]
                    },
                    "then": {
                        "properties": {
                            "defaultLayout": { "enum": ["masonry", "list"] }
                        }
                    }
                }
            ]
        }
    }
}